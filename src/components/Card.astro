---
const {
  data: { 
    ID, 
    title,
    slug,
    direccion, 
    descripcion, 
    moneda,
    precio,
    precio_uf,
    tamano_construido, 
    dormitorios, 
    banos, 
    imagen_destacada, 
    tipo, 
    operacion, 
    ubicacion 
  },
} = Astro.props;
---

<li class="rounded-sm overflow-hidden border border-gray-200 flex flex-col transition-all duration-300 hover:shadow-sm hover:-translate-y-2">
  <a href=`/propiedad/${slug}`>
    <div class="relative isolate">
      <img
        src={imagen_destacada}
        alt={title}
        loading="lazy"
        class="aspect-video w-full h-full object-cover object-center"
        transition:name={`propiedad-image-${ID}`}
      />
      {operacion && operacion.length > 0 && (
        <span class="text-[9px] font-semibold uppercase line-clamp-1 absolute top-2 right-2 rounded-full bg-blue-800 text-white px-2 py-1 leading-tight">
          {operacion.map((op: { name: any; }) => `${op.name}`).join(', ')}
        </span>
      )}
      {ubicacion && ubicacion.length > 0 && (
        <div class="flex gap-0.5 items-center absolute left-2 bottom-2">
          <svg class="size-6 text-white" viewBox="0 0 24 24">
            <path fill="currentColor" d="M12.004 11.73q.667 0 1.14-.475t.472-1.143t-.476-1.14t-1.143-.472t-1.14.476t-.472 1.143t.475 1.14t1.144.472M12 19.677q2.82-2.454 4.458-4.991t1.638-4.39q0-2.744-1.737-4.53Q14.62 3.981 12 3.981T7.641 5.766t-1.737 4.53q0 1.852 1.638 4.39T12 19.677m0 1.342q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.903"/>
          </svg>
          <span class="text-sm font-semibold text-white">{ubicacion.map((ubi: { name: any; }) => `${ubi.name}`).join(', ')}</span>
        </div>
      )}
    </div>
  </a>
  <div class="h-full p-3 flex flex-col">
    <a href=`/propiedad/${slug}`>
      <h2 class="text-lg font bold">{title}</h2>
    </a>
    {moneda === 'peso' ? (
      <h4 class="text-slate-600 font-bold">${precio}</h4>
    ) : (
      <h4 class="text-slate-600 font-bold">UF {precio_uf}</h4>
    )}
    <div class="flex items-center gap-4">
      {tamano_construido && (
        <div class="flex items-center gap-2">
          <svg class="size-4 text-orange-600" viewBox="0 0 24 24">
            <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 3.098s-3.966-.356-4.612.29S3.098 8 3.098 8M8 20.902s-3.966.356-4.612-.29S3.098 16 3.098 16M16 3.098s3.966-.356 4.612.29s.29 4.612.29 4.612M16 20.902s3.966.356 4.612-.29s.29-4.612.29-4.612M14.01 9.998l6.053-6.051M9.997 14.002L3.64 20.381m6.357-10.379L3.846 3.86M13.98 14.002l6.548 6.496" color="currentColor"/>
          </svg>
          <span>{tamano_construido}mt2</span>
        </div>
      )}
      {dormitorios && (
        <div class="flex items-center gap-2">
          <svg class="size-4 text-orange-600" viewBox="0 0 24 24">
            <path fill="currentColor" d="M4.77 18h-.54l-.38-2H3v-3.39q0-.671.472-1.14q.472-.47 1.144-.47H5V8.615q0-.67.472-1.143Q5.944 7 6.616 7h10.769q.67 0 1.143.472q.472.472.472 1.143V11h.385q.67 0 1.143.472q.472.472.472 1.144V16h-.85l-.38 2h-.54l-.38-2H5.15zm7.73-7H18V8.615q0-.269-.173-.442T17.385 8H12.5zM6 11h5.5V8H6.616q-.27 0-.443.173T6 8.615zm-2 4h16v-2.384q0-.27-.173-.443T19.385 12H4.615q-.269 0-.442.173T4 12.616zm16 0H4z"/>
        </svg>
        <span>{dormitorios}</span>
      </div>
      )}
      {banos && (
        <div class="flex items-center gap-2">
          <svg class="size-4 text-orange-600" viewBox="0 0 24 24">
            <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5">
              <path d="M21 13v3a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4v-2.4a.6.6 0 0 1 .6-.6zm-5 7l1 2m-9-2l-1 2m14-9V7a4 4 0 0 0-4-4h-5"/>
              <path d="M15.4 8H8.6c-.331 0-.596-.268-.56-.598C8.186 6.075 8.863 3 12 3s3.814 3.075 3.96 4.402c.036.33-.229.598-.56.598"/>
            </g>
          </svg>
          <span>{banos}</span>
        </div>
      )}
    </div>
    <!-- {
      tipo?.length > 0 && (
        <span class="text-sm line-clamp-1">Tipo de Propiedad: {tipo.map(t => t.name).join(', ')}</span>
      )
    } -->
  </div>
</li>